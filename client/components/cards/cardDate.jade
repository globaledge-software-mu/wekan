template(name="dateBadge")
  if currentUser.canAlterCard
    a.js-edit-date.card-date(title="{{showTitle}}" class="{{classes}}")
      time(datetime="{{showISODate}}")
        | {{showDate distinguishDate}}
  else
    a.card-date(title="{{showTitle}}" class="{{classes}}")
      time(datetime="{{showISODate}}")
        | {{showDate distinguishDate}}

template(name="editCardReceivedComposedScoreModal")
  #modalBanner
    h4#modalLabel
      | {{_ 'edit-card-received-score'}}
  hr.hrEditCardReceivedComposedScoreForm
  #editCardReceivedComposedScoreFormContainer
    form#editCardReceivedComposedScoreForm
      .saveDetailedScores
        input.primary.wide(type="submit" value="{{_ 'save'}}")
      .scrollableList
        if hasOnlyAspects
          each aspects
            label.bold
              | {{title}}
              span.error.hide.aspects-blank.aspects-not-edited
                | {{_ 'aspects-blank'}}
              input.aspects(type="text" value="{{score}}")
        if hasOnlyTeamMembers
          each teamMembers
            label.bold
              | {{username}}
              span.error.hide.team-member-score-blank.team-member-score-not-edited
                | {{_ 'team-member-score-blank'}}
              input.team-member-score(type="text" value="{{score}}")
        if hasBothTeamMembersAndAspects
          each teamMembers
            .bothAspectsAndTeamMembersContainer
              .teamMembersContainer(style="display: flex;")
                label.team-member-label.bold(style="line-height: 40px;")
                  | {{username}}
                  span.error.hide.team-member-score-blank.team-member-score-not-edited
                    | {{_ 'team-member-score-blank'}}
                input.team-member-score-input(disabled type="text" value="{{score}}" style="width: fit-content; margin-left: 8px; height: fit-content;")
              each aspects
                .aspectsContainer(style="margin-left: 50px; display: flex;")
                  label.aspects-label.bold(style="line-height: 40px;")
                    | {{title}}
                    span.error.hide.aspects-blank.aspects-not-edited
                      | {{_ 'aspects-blank'}}
                  input.aspects-score-input(type="text" value="{{score}}" style="width: fit-content; margin-left: 8px;")
            hr

