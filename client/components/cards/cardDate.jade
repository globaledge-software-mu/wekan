template(name="dateBadge")
  if currentUser.canAlterCard
    a.js-edit-date.card-date(title="{{showTitle}}" class="{{classes}}")
      time(datetime="{{showISODate}}")
        | {{showDate distinguishDate}}
  else
    a.card-date(title="{{showTitle}}" class="{{classes}}")
      time(datetime="{{showISODate}}")
        | {{showDate distinguishDate}}

template(name="editCardReceivedComposedScoreModal")
  #modalBanner
    h4#modalLabel
      | {{_ 'edit-card-received-score'}}
  hr.hrEditCardReceivedComposedScoreForm
  #editCardReceivedComposedScoreFormContainer
    form#editCardReceivedComposedScoreForm
      if hasOnlyAspects
        each aspects
          label.bold
            | {{title}}
            span.error.hide.aspects-blank.aspects-not-edited
              | {{_ 'aspects-blank'}}
            input.aspects(type="text" value="{{score}}")
      if hasOnlyTeamMembers
        each teamMembers
          label.bold
            | {{username}}
            span.error.hide.team-member-score-blank.team-member-score-not-edited
              | {{_ 'team-member-score-blank'}}
            input.team-member-score(type="text" value="{{score}}")
      if hasBothTeamMembersAndAspects
        each teamMembers
          label.bold
            | {{username}}
            span.error.hide.team-member-score-blank.team-member-score-not-edited
              | {{_ 'team-member-score-blank'}}
            input.team-member-score(type="text" value="{{score}}")
            each aspects
              label.bold
                | {{title}}
                span.error.hide.aspects-blank.aspects-not-edited
                  | {{_ 'aspects-blank'}}
                input.aspects(type="text" value="{{score}}")

